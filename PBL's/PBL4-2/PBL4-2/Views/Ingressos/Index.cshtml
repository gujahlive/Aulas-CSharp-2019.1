@model IEnumerable<PBL4_2.Models.Ingresso>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<label class="btn btn-danger">Quantidade Total de Ingressos: @ViewBag.Contador</label>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Bilheteria 
        </th>
        <th>
            Cliente
        </th>
        <th>
           Evento
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Free)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bilheteria.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evento.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Free)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IngressoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.IngressoId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IngressoId })
            </td>
        </tr>
    }

</table>
