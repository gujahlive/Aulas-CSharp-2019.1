
@{
    ViewBag.Title = "ExpoQuadro";
}

<h2>ExpoQuadro</h2>

@{ var quadros = ViewBag.Quadros;}
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Ano de Lançamento
            </th>
            <th>
                Descrição
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quadro in quadros)
        {
            <tr>
                <td>@quadro.Autor.Nome</td>
                <td>@quadro.AnoLancamento</td>
                <td>@quadro.Descricao</td>
            </tr>
        }
    </tbody>
</table>

<h2>Autor</h2>
@{ var autores = ViewBag.Autores;}
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Cpf
            </th>
            <th>
                Aquarela?
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var autor in autores)
        {
            <tr>
                <td>@autor.Nome</td>
                <td>@autor.Cpf</td>
                <td>
                    @*{if (autor.Aquarela == true)
                {
                    <p>SIM</p>
                }
                else
                { <p>NÃO</p>}
        }*@
                    @autor.PintaAquarela(autor.Aquarela) <!--trazendo do metódo-->
                </td>
        </tr>
    }
    </tbody>
</table>

